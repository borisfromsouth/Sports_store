<!DOCTYPE html>

<html>  <!-- Тут храняться элементы котррпые передаются для каждой страницы (хедеры, задники и тд) -->
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" asp-href-exclude="**/*-reboot*,**/*-grid*"/>
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css"/>
    <title>SportsStore</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation" style="color:red">
        <div class="row">
            <a class="col-4 navbar-brand" href="#">SPORTS STORE</a>
            <div class="col-6 text-right">                     <!-- значок корзины не показывается -->
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
        <!--<a class="navbar-brand" href="#">SPORTS STORE</a>-->
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>

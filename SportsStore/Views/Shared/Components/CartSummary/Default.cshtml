@model Cart

<div class="">
	@if (Model.Lines.Count() > 0){
		<small class="navbar-text">
			<b>Your cart:</b>
			@Model.Lines.Sum(x => x.Quantity) item(s)
			@Model.ComputeTotalValue().ToString("c")
		</small>
	}
	<a class="btn btn-sm btn-secondary navbar-btn" style="width: 50px; height:45px; background-color: white; border: none;" asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
		<!--<i class="fa-solid fa-cart-shopping"></i>-->
		<img src="/resource/cart-shopping-solid.svg" alt="icon"/>
	</a>
</div>
